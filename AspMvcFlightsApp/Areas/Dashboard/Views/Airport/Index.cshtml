@model IEnumerable<AspMvcFlightsApp.Models.AirportData>?

<h2>Панель управления аэропортами</h2>

<div>
    <a class="btn btn-secondary"
       asp-route="dashboard"
       asp-route-controller="Home"
       asp-route-action="Index">
        Вернуться на главную страницу
    </a>

    <a class="btn btn-primary"
       asp-route="dashboard"
       asp-route-controller="Airport"
       asp-route-action="Create">
        Добавить новый аэропорт
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Город</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model is not null)
        {
            @foreach (var airport in Model)
            {
                <tr>
                    <td>@airport?.Title</td>
                    <td>@airport?.City?.Title</td>
                    <td>
                        <a class="btn btn-secondary"
                           asp-route="dashboard"
                           asp-route-controller="Airport"
                           asp-route-action="Edit"
                           asp-route-id="@airport?.Id">
                            Редактировать
                        </a>
                    </td>
                    <td>
                        <form method="post"
                              asp-route="dashboard"
                              asp-route-controller="Airport"
                              asp-route-action="Delete"
                              asp-route-id="@airport?.Id">
                            <button type="submit"
                                    class="btn btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>